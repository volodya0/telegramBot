{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2021",
      "moduleResolution": "node",
      "lib": ["es2021"],
      "skipLibCheck": true,
      "rootDir": "src",
      "outDir": "dist"
    },
    "compileOnSave": true,
    "include": [
      "src"
    ]
  }